      <onSaveDocument type="Products.Archetypes.Field.TextField"><![CDATA[from Products.CMFPlomino.PlominoUtils import Now
if not context.getItem('email_richiesta_verifica'):
    context.setItem('email_richiesta_verifica',context.getItem('oggetto_richiesta_verifica'))

parentDoc = context.getParentDatabase().getDocument(context.getItem('parent_document'))
if not parentDoc:
    return 

allegati = context.getParentDatabase().resources.customscripts.getIstanzaAllegati(doc=parentDoc,field='allegati_istanza')
allegati = allegati +  context.getParentDatabase().resources.customscripts.getIstanzaAllegati(doc=parentDoc,field='allegati_scia_condizionata')

context.setItem('allegati',allegati)


if context.REQUEST.get('btn_invia_richiesta'):
    Ente=context.getUserGroupFullName(context.getItem('verifica_ente_opt'))
    parentDoc.iolSendMail(azione='verifica-parere-ok',
                          parentDoc=context,
                          form=parentDoc.getItem('iol_start_form'))    
    parentDoc.doAction('27_richiedi_verifica')
    parentDoc.setWfActivity(activity="Richiesta di verifica a %s" %Ente)    
    
    context.setItem('data_invio_richiesta_verifica',Now())
    context.setItem('data_invio_richiesta_verifica_testo',DateToString(Now(),format="%Y/%m/%d"))
  
    context.setItem('Plomino_Readers',context.getItem('Plomino_Readers',[]) + [str(context.getItem('verifica_ente_opt'))])
    #context.setItem('Plomino_Authors',context.getItem('Plomino_Authors',[]) + [str(context.getItem('verifica_ente_opt'))])

    context.plone_utils.addPortalMessage('Richiesta di verifica inviata','info')

    return parentDoc.absolute_url()
else:
    return context.absolute_url() + '/EditDocument']]></onSaveDocument>
