          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[from Products.CMFCore.utils import getToolByName
db = getToolByName(context, 'iol_asservimenti')
idx = db.getIndex()
if not 'parent_document' in idx.indexes():
    return ''
#la ricerca deve restituire i documenti dei queli l'utente corrente Ã¨ author
brains = idx.dbsearch(dict(parent_document=context.getId()))  
html=''
for brain in brains:
    content=''
    doc=brain.getObject()
    renderForm=db.getForm('sub_vista_asservimento')
    content=content + renderForm.displayDocument(doc)    
    if content:
        html=html+'<fieldset class="scheduler-border"><legend class="scheduler-border"><a href="%s"> ASSERVIMENTO REP. %s </a></legend><div class="v-content well">%s</div></fieldset>'%(doc.absolute_url(),doc.getItem('repertorio'),content)

    
return html]]></Formula>
